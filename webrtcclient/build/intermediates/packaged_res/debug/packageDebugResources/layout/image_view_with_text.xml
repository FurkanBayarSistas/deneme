<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageviewwithtext_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialpad_button" />
    <!--android:src="@drawable/myImageSouce"-->

    <TextView
        android:id="@+id/imageviewwithtext_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageviewwithtext_imageview"
        android:layout_alignLeft="@+id/imageviewwithtext_imageview"
        android:layout_alignRight="@+id/imageviewwithtext_imageview"
        android:layout_alignTop="@+id/imageviewwithtext_imageview"
        android:layout_margin="1dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="15sp" />
    <!--android:textSize="@dimen/default_imageviewwithtext_text_size"-->
    <!--android:textColor="@color/default_imageviewwithtext_text_color" />-->

</RelativeLayout>